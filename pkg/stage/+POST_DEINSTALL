if [ -n "${PKG_ROOTDIR}" ] && [ "${PKG_ROOTDIR}" != "/" ]; then
  PW="/usr/sbin/pw -R ${PKG_ROOTDIR}"
else
  PW=/usr/sbin/pw
fi

if ${PW} usershow darwin >/dev/null 2>&1; then
  echo "==> You should manually remove the \"darwin\" user. "
fi
if ${PW} groupshow darwin >/dev/null 2>&1; then
  echo "==> You should manually remove the \"darwin\" group "
fi
